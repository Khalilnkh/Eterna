@{
   List<Service>services = ViewBag.ServicesCount;
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="index.html">Home</a></li>
                <li>Pricing</li>
            </ol>
            <h2>Pricing</h2>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">
        <div class="container">

            <div class="row no-gutters">

                <div class="col-lg-4 box">
                    @foreach (Pricing item in Model)
                    {
                        <h3>@item.Name</h3>
                        <h4>@item.Price</h4>
                        <ul>
                            @foreach (Service service in services)
                            {
                                if (item.PricingServices.Exists(ps=>ps.ServiceId==service.Id))
                                {
                                     <li><i class="bx bx-check"></i> @service.Name</li>
                                }
                                else
                                {
                                    <li class="na"><i class="bx bx-x"></i> <span>@service.Name</span></li>
                                }
                                
                            }


                           
                        </ul>
                        <a href="#" class="buy-btn">Buy Now</a>

                    }
                </div>





            </div>

        </div>
    </section><!-- End Pricing Section -->

</main><!-- End #main -->